@model PagedList.IPagedList<Socialite.Models.DashboardViewModel>
@using Socialite.Controllers
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var categories = DashboardController.checkCatList;
    var tags = DashboardController.checkTagList;
}

<div class="dashboardContainer">
    <div class="maindashboardview">
        @{Html.RenderPartial("Posts");}
    </div>
    <div class="maindashboardbar">

        <div class="dashboardControlPanel">
            @using (@Html.BeginForm("Index", "Dashboard", FormMethod.Get, new { @class = "indexSearchForm" }))
            {
                if (ViewBag.CurrentSearchCategory != null)
                {
                    foreach (var item in ViewBag.CurrentSearchCategory)
                    {
                        <input type="hidden" name="searchCategory" value="@item" />
                    }
                }
                if (ViewBag.CurrentSearchTag != null)
                {
                    foreach (var item in ViewBag.CurrentSearchTag)
                    {
                        <input type="hidden" name="searchTag" value="@item" />
                    }
                }
                <input type="hidden" name="sortOrder" value="@ViewBag.CurrentSort" />
                <input type="search" name="searchString" value="@ViewBag.CurrentSearchString" placeholder="Search..." />
                <input type="submit" value="&#128270;" style="background:none; border:none;" />
            }
            <div style="margin:10px;"><a href="@Url.Action("AllPosts", "Dashboard")" style="text-decoration:none; color:blue;" title="Posts">Post List</a></div>
            <div style="color:blue; cursor:pointer; float:left; width:300px; margin:10px;" id="indexFilterBtn">Filter</div>
        @using (Html.BeginForm("Index", "Dashboard", FormMethod.Get, new { @class = "indexFilterForm" }))
        {
            <table class="dashCrtlTable">
                <tr>
                    <td><a class="dashCtrlPnl" title="Categories">Categories</a></td>
                </tr>
                <tr>
                    <td style="width:100%;">
                        @foreach (var cat in categories)
                        {
                            <div style="width:45%; float: left;">
                                @if (cat.Checked)
                                {
                                    <input type="checkbox" name="searchCategory" value="@cat.Category.Name" checked="checked" /> @cat.Category.Name
                                }
                                else
                                {
                                    <input type="checkbox" name="searchCategory" value="@cat.Category.Name" /> @cat.Category.Name
                                }
                            </div>
                        }
                    </td>
                </tr>
                <tr>
                    <td><a class="dashCtrlPnl" title="Tags">Tags</a></td>
                </tr>
                <tr>
                    <td style="width:100%;">
                        @foreach (var tag in tags)
                        {
                            <div style="width:45%; float:left;">
                                @if (tag.Checked)
                                {
                                    <input type="checkbox" name="searchTag" value="@tag.Tag.Name" checked="checked" /> @tag.Tag.Name
                                }
                                else
                                {
                                    <input type="checkbox" name="searchTag" value="@tag.Tag.Name" />
                                }
                            </div>
                        }
                    </td>
                </tr>
                <tr>
                    <td colspan="2">
                        <input type="hidden" name="page" value="1" />
                        <input type="hidden" name="sortOrder" value="@ViewBag.CurrentSort" />
                        <input type="hidden" name="searchString" value="@ViewBag.CurrentSearchString" />
                        <input class="indexFiltBtn" type="submit" value="Filter" />
                    </td>
                </tr>
            </table>
        }
        </div>

    </div>
</div>

